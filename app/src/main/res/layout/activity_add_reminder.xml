<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/for_add_reminder_background"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarofaddreminder"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/exit"
                    android:visibility="invisible"
                  android:layout_marginBottom="120dp"
                    android:layout_marginLeft="0dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_close_24"
                     />


                <ImageView
                    android:id="@+id/image_reminde_me"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_gravity="center"
                    android:contentDescription="reminde_me"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/reminder_icon" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/layout_titleinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbarofaddreminder"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/titleinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_txt_bg_with_color"
                    android:hint="New Reminder"
                    android:inputType="textUri"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/SlateGray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_titleinput"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/descriptioninput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/edit_txt_bg_with_color"
                    android:gravity="top"
                    android:hint="Notes"
                    android:lines="3"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/SlateGray" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_Date"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@+id/layout_description"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/image_date"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:contentDescription="reminde_me"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/calender_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginStart="0dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/date_switch"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:baselineAligned="false"
                    android:textOff="off"
                    android:textOn="on"
                    android:padding="10dp"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />
                <EditText
                    android:id="@+id/date1"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/DarkSlateBlue"

                    android:textColorHint="@color/SlateGray"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
                </EditText>

                <EditText
                    android:id="@+id/date"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="-270dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:textColor="@color/Gray"

                    android:textColorHint="@color/SlateGray"
                    android:textSize="12sp">

                </EditText>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_location_switch"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@+id/layout_Date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:contentDescription="reminde_me"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/location_icon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginStart="0dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/location_switch"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:baselineAligned="false"
                    android:textOff="off"
                    android:textOn="on"
                    android:padding="10dp"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Time_switch"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@+id/layout_location_switch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_time"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:contentDescription="reminde_me"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/time_icon" />

                <TextView
                    android:layout_width="51dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="0dp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
                <EditText
                    android:id="@+id/time"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="-52dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:textColor="@color/Gray"

                    android:textColorHint="@color/SlateGray"
                    android:textSize="12sp"/>



                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/time_switch"
                    android:layout_width="72dp"
                    android:layout_height="56dp"
                    android:baselineAligned="false"
                    android:padding="10dp"
                    android:textOff="off"
                    android:textOn="on"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />

                <Button
                    android:id="@+id/timeButten"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:onClick="popTimeClicker"
                    android:padding="10dp"
                    android:text="Select Time"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="invisible">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_weather_switch"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@+id/layout_Time_switch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_weather"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:contentDescription="reminde_me"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/weather_icon" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="0dp"
                    android:text="Weather"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/weather_switch"
                    android:layout_width="72dp"
                    android:layout_height="56dp"
                    android:baselineAligned="false"
                    android:textOff="off"
                    android:textOn="on"
                    android:padding="10dp"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_add_weather"
                android:layout_width="364dp"
                android:layout_height="134dp"
                android:layout_below="@+id/layout_weather_switch"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/weather_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text=""
                    android:hint="Enter City Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black">

                </EditText>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weather_cond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="select Weather Condition"
                    android:minHeight="50dp"
                    android:textColorHint="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:inputType="none"
                        android:minHeight="50dp"
                        android:textAppearance="@style/TextStyle"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-140dp"
                android:src="@drawable/ic_baseline_done_24"
                >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>