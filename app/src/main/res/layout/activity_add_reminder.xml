<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/soft_lights">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarofaddreminder"
        android:layout_width="374dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/image_reminde_me"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:contentDescription="reminde_me"
            android:foregroundGravity="center"
            android:padding="10dp"
            app:srcCompat="@drawable/remind_me" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_titleinput"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/descriptioninput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#30C67259"
            android:gravity="top"
            android:hint="Decription"
            android:lines="3"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_titleinput"
        android:layout_below="@+id/toolbarofaddreminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/titleinput"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#30C67259"
            android:hint="Name me"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textUri"
            android:minHeight="48dp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_description"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/date"
            android:layout_width="351dp"
            android:layout_height="50dp"
            android:background="#30C67259"
            android:hint="Choose Date"
            android:textColor="@color/black"
            android:textColorHint="@color/black">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_switch"
        android:layout_width="372dp"
        android:layout_height="73dp"
        android:layout_below="@+id/layout_Date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/location_switch"
            android:layout_width="76dp"
            android:layout_height="56dp"
            android:baselineAligned="false"
            android:textOff="off"
            android:textOn="on"
            android:thumb="@drawable/thumb"
            app:showText="true"
            app:track="@drawable/track" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_weather_switch"
        android:layout_width="372dp"
        android:layout_height="73dp"
        android:layout_below="@+id/layout_Time_switch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp">

        <TextView
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:text="weather"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/weather_switch"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:baselineAligned="false"
            android:textOff="off"
            android:textOn="on"
            android:thumb="@drawable/thumb"
            app:showText="true"
            app:track="@drawable/track" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_Time_switch"
        android:layout_width="372dp"
        android:layout_height="73dp"
        android:layout_below="@+id/layout_location_switch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="41dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Time_switch"
            android:layout_width="76dp"
            android:layout_height="56dp"
            android:baselineAligned="false"
            android:textOff="off"
            android:textOn="on"
            android:thumb="@drawable/thumb"
            app:showText="true"
            app:track="@drawable/track" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="done_icone"
        android:foregroundGravity="bottom"
        android:src="@drawable/ic_baseline_done_24"
        app:maxImageSize="40dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>




</RelativeLayout>